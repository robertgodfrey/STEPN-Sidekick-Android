<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.STEPNSidekick" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/almost_black</item>
        <item name="colorPrimaryVariant">@color/light_green</item>
        <item name="colorOnPrimary">@color/almost_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/almost_black</item>
        <item name="colorOnSecondary">@color/almost_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gandalf</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowBackground">@color/background_off_white</item>
        <item name="android:navigationBarColor">@color/and_nav_bar_grey</item>
    </style>
</resources>